{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM", "ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "lib",
    "moduleDetection": "force"
  },
  "include": ["src/ts/**/*", "src/ts/index.ts"],
  "exclude": ["node_modules"]
}
